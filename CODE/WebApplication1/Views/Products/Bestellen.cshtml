@model WebApplication1.Models.BestellenViewModel

@{
    ViewData["Title"] = "Bestellen";
}

<h1>Bestellen</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Price)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-controller="Orders" asp-action="AddToOrder" asp-route-id="@item.Id" asp-route-OrderId="@Model.Order.Id">Toevoegen aan order</a> |
                    <a asp-controller="Orders" asp-action="RemoveFromOrder" asp-route-id="@item.Id">Verwijder van order</a>
                </td>
            </tr>
        }
    </tbody>
      
</table>
