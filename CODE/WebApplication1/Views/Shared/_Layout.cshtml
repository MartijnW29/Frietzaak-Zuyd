<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Piet z'n gouden friet</title>

    <!-- Bootstrap -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

    
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Navigatiebalk -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="@Url.Action("HomePagina", "Home")">Piet z'n gouden friet</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("HomePagina", "Home")">Home</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Bestellen", "Products")">Bestellen</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Overview", "Orders")">Mijn Orders</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Products")">Producten beheer</a>
                </li>

            </ul>
        </div>
    </nav>

   
    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="text-center mt-4">
        <p>&copy; @DateTime.Now.Year - Martijn's Website</p>
    </footer>

    <!-- Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
